{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "core-js/es7/reflect": [
        "./node_modules/core-js/proposals/reflect-metadata"
      ],
      "spa-angular-editable-components": [
        "dist/spa-angular-editable-components"
      ],
      "spa-angular-editable-components/*": [
        "dist/spa-angular-editable-components/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "include": [
    "src/**/*"
  ]
}
